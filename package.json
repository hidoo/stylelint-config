{
  "name": "@hidoo/stylelint-config",
  "version": "0.9.0",
  "description": "Sharable stylelint config for my projects.",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": "8.15.1"
  },
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./+scss": "./+scss.js",
    "./src/*": "./src/*.js"
  },
  "files": [
    "src/",
    "index.js",
    "+scss.js"
  ],
  "scripts": {
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "git config --local core.hooksPath .githooks",
    "test": "pnpm run --sequential '/^test:[^:]+$/'",
    "test:lint": "pnpm run --sequential '/^test:lint:[^:]+$/'",
    "test:lint:js": "eslint .",
    "test:unit": "cross-env NODE_ENV=test mocha test/**/*.test.js",
    "version": "pnpm run --sequential '/^(test|version:[^:]+)$/'",
    "version:changelog": "conventional-changelog -p angular -i ./CHANGELOG.md -s -r 0",
    "version:commit": "git add ./CHANGELOG.md"
  },
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "hidoo",
  "license": "MIT",
  "dependencies": {
    "postcss": "8.4.33",
    "postcss-scss": "4.0.9",
    "stylelint-a11y": "1.2.3",
    "stylelint-config-standard": "24.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.7.0",
    "stylelint-group-selectors": "1.0.9",
    "stylelint-high-performance-animation": "1.8.0",
    "stylelint-no-unsupported-browser-features": "5.0.4",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.6.0",
    "stylelint-selector-no-empty": "1.0.9",
    "stylelint-selector-tag-no-without-class": "2.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@hidoo/eslint-config": "^1.1.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "7.0.3",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.2",
    "mocha": "10.3.0",
    "power-assert": "1.6.1",
    "prettier": "^3.2.5",
    "stylelint": "14.16.1"
  },
  "peerDependencies": {
    "stylelint": ">=14.0.0"
  }
}
